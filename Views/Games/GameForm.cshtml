@model GameCatalog.Models.GameModel 
@using GameCatalog.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("SaveChanges", "Games", Model)) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <input class="hidden" id="gameID" value="@Model.GameID" />
    <div class="row">
        <div class="col-md-6">
            @*Title*@
            <div class="form-group form-horizontal">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            @*Developer*@
            <div class="form-group form-horizontal">
                @Html.LabelFor(model => model.Developer, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Developer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Developer, "", new { @class = "text-danger" })
                </div>
            </div>
            @*ReleaseDate*@
            <div class="form-group form-horizontal">
                @Html.LabelFor(model => model.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control", @type = "date"} })
                    @Html.ValidationMessageFor(model => model.ReleaseDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @*Genres*@
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.SelectedGenres, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    @Html.ListBoxFor(model => model.SelectedGenres, Model.Genres, new { size = 20 })
                    @Html.ValidationMessageFor(model => model.SelectedGenres, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            @*Platforms*@
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.SelectedPlatforms, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    @Html.ListBoxFor(model => model.SelectedPlatforms, Model.Platforms, new { size = 20 })
                    @Html.ValidationMessageFor(model => model.SelectedPlatforms, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <p>(*To select multiple genres/platforms, hold Ctrl while selecting.)</p>
    </div>
    <div class="row">
        @*Save Button*@
        <div class="form-group">
            <br />
            <div class="col-md-2 col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-default btn-lg" />
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Games", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
