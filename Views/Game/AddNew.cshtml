@* model GameCatalog.Models.GameModel *@
@using GameCatalog.Models;

@model ViewModel

@{
    ViewBag.Title = "Add a new game";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new game</h2>


@using (Html.BeginForm("Insert", "Game")) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-4">
            @*Title*@
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            @*Developer*@
            <div class="form-group">
                @Html.LabelFor(model => model.Developer, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Developer, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Developer, "", new { @class = "text-danger" })
                </div>
            </div>
            @*ReleaseDate*@
            <div class="form-group">
                @Html.LabelFor(model => model.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.ReleaseDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @*Genres*@
        <div class="col-md-2">
            <div class="col-md-12">
                @Html.LabelFor(model => model.SelectedGenres, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @*Html.ListBoxFor(model => Model.SelectedGenres, Model.Genres, new { size = 20, @id = "listbox_genres", @required = "required" })*@
                @Html.ListBoxFor(model => Model.SelectedGenres, new SelectList(Model.Genres, "Value", "Text"), new { size = 20, @id = "listbox_genres", @required = "required" })
            </div>
            @Html.ValidationMessageFor(model => Model.SelectedGenres, "", new { @class = "text-danger" })
        </div>
        @*Platforms*@
        <div class="col-md-2">
            <div class="col-md-12">
                @Html.LabelFor(model => model.SelectedPlatforms, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @*Html.ListBoxFor(model => Model.SelectedPlatforms, Model.Platforms, new { size = 20, @id = "listbox_genres", @required = "required" })*@
                @Html.ListBoxFor(model => model.SelectedPlatforms, new SelectList(Model.Platforms, "Value", "Text"), new { size = 20, @id = "listbox_platforms", @required = "required" })
            </div>
            @Html.ValidationMessageFor(model => Model.SelectedPlatforms, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <p>(*To select multiple genres/platforms, hold Ctrl while selecting.)</p>
    </div>
    <div class="row">
        @*Add Button*@
        <div class="form-group">
            <br />
            <div class="col-md-4 text-center">
                <input type="submit" value="Add game" class="btn btn-default btn-lg" />
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
